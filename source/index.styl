
@import "https://unpkg.com/normalize.css@8.0.0/normalize.css"

$backgroundColor = #f1f1f1
$padding = 30px
$txtColor = lighten(black, 30%)
$black = black

body, html
  padding: 0
  margin: 0
  height: 100%
  color: $txtColor

*
  box-sizing: border-box

@keyframes slideLine
  0%
    width: 0%
  30%
    width: 50%
  100%
    width: 100%

.loader
  animation: slideLine 2s;
  position: fixed
  background-color: $black
  top: 0
  left: 0
  z-index: 1003
  height: 5px

.editor
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  display: flex
  justify-content: center
  background-color: $backgroundColor

  &.shy
    textarea
      color: rgba($txtColor, 0.01)
      text-shadow: 0 0 16px black

  .action-bar
    position: fixed
    left: 0
    bottom: 0
    padding: ($padding/2)
    width: 100%
    background-color: rgba(darken($backgroundColor, 20%), .7)
    border-top: 1px solid lighten($txtColor, 70%)
    display: flex
    justify-content: space-between

    button
      color: $txtColor
      font-family: Times
      border: 1px solid lighten($txtColor, 60%)
      background-color: $backgroundColor
      font-size: 1em
      padding: ($padding/3) ($padding/2)
      border-radius: .2em
      cursor: pointer
      transition: all .3s ease

      &:hover
        border-color: darken($txtColor, 70%)
        background-color: white
        color: darken($txtColor, 70%)

      &:focus
        outline: none
        outline-color: transparent
        outline-style: none

  textarea
    width: 100%
    height: 100%
    font-size: 1.4em
    font-family: Times
    color: $txtColor
    padding: $padding 20%
    padding-bottom: 100px
    width: 100%
    outline: none
    line-height: 1.3em
    border: none
    background-color: $backgroundColor
    transition: text-shadow .2s ease


@media only screen and (max-device-width: 480px) {
    /* STYLES HERE */
  .editor textarea {
    padding: $padding;
  }
}
