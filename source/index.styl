
@import "https://unpkg.com/normalize.css@8.0.0/normalize.css"

$backgroundColor = #f1f1f1
$padding = 30px
$txtColor = lighten(black, 20%)
$black = black
$borderRadius = 3px

body, html
  padding: 0
  margin: 0
  height: 100%
  width: 100%
  color: $txtColor

*
  box-sizing: border-box

@keyframes slideLine
  0%
    width: 0%
  30%
    width: 50%
  100%
    width: 100%

.loader
  animation: slideLine 2s;
  position: fixed
  background-color: $black
  top: 0
  left: 0
  z-index: 1003
  height: 4px

.journal-box-app
  height: 100%
  width: 100%
  display: flex
  flex-direction: column
  justify-content: flex-start
  align-items: stretch
  align-content: stretch

.editor
  width: 100%
  height: 100%
  background-color: $backgroundColor
  overflow: hidden

  &.shy
    .textarea
      color: rgba($txtColor, 0.01)
      text-shadow: 0 0 16px lighten(black, 50%)

  .textarea
    white-space: pre-wrap
    width: 100%
    height: 100vh
    font-size: 1.6em
    line-height: 1.38em
    letter-spacing: -0.007em
    font-family: Times, serif
    // font-family: 'Merriweather', Times, serif
    color: $txtColor
    padding: $padding 20%
    padding-top: 80px !important
    width: 100%
    outline: none
    border: none
    background-color: $backgroundColor
    overflow-y: scroll
    -webkit-overflow-scrolling: touch
    // transition: text-shadow .3s ease-out
    // transition: color .3s ease-out


.action-bar
  position: fixed
  left: 0
  top: 0
  padding: ($padding/4)
  width: 100%
  background-color: rgba($backgroundColor, 0.8)
  // border-top: 1px solid lighten($txtColor, 70%)
  display: flex
  justify-content: space-between

  .fixed-btns
    position: fixed
    bottom: ($padding/4)
    left: ($padding/4)


  button
    color: lighten($txtColor, 20%)
    font-family: Monaco, monospace
    text-transform: uppercase
    font-size: .8em
    border: 1px solid $backgroundColor
    background-color: $backgroundColor
    padding: ($padding/4) ($padding/2)
    border-radius: $borderRadius
    cursor: pointer
    transition: all .3s ease

    &:disabled
      cursor: not-allowed
      opacity: 0.3


    &.icon
      i.fas
        margin-right: .4em

    &:active
      border: 1px solid lighten($txtColor, 70%)
      background-color: white
      color: darken($txtColor, 70%)

    &:focus
      outline: none
      outline-color: transparent
      outline-style: none



@media only screen and (max-device-width: 480px) {
    /* STYLES HERE */
  .editor .textarea {
    padding: $padding;
  }
  .action-bar button.icon i {
    margin-right: none !important;
  }

  .action-bar button label {
    display: none
  }
}
